{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/@types/*",
                "*"
              ],
            
            "actions/*": ["src/app/worker/actions/*"],
            "dom/*": ["src/app/main/dom/*"],
            "frp/*": ["src/app/worker/frp/*"],
            "types/*": ["src/app/types/*"],
            "utils/*": ["src/app/utils/*"]
        },
        "skipLibCheck": true,
        "outDir": "dist/tsc",
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es5",
        "jsx": "react",
        "lib": [
            "es6",
            "es5",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "coverage"
    ]
}
